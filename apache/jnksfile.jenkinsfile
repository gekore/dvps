properties([disableConcurrentBuilds()])

pipeline {
	agent {
		label 'master'
	    }
	triggers { pollSCM('* * * * *') }
	options {
		timestamps()
	}
	stages {
		stage("PWD") {
		steps{
		echo "PWD"
		pwd
		}
		}
		stage("create docker image") {
			steps {
				echo "start building image"
				dir ('dvps/apache') {
					sh 'docker build .'
					}
				}
			}
		}
}
